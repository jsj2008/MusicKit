CONFIG = OTHER_CFLAGS="@DEFS@ @CFLAGS@ @CPPFLAGS@" LDFLAGS="@LDFLAGS@" CONFIGURED_LIBS="@LIBS@" SGMLTRANS="@SGMLTRANS@"
PROJECT = -project MusicKit.xcodeproj
SDK = # -sdk macosx10.6 # disabled for now
XCODEBUILD = xcodebuild $(PROJECT) $(SDK)
# This allows overriding this on the command line.
DSTROOT=/
# This is for building with "sudo make install" and allows overriding on the command line.
OBJROOT=/tmp
# This is for building with "sudo make install" and allows overriding on the command line.
SYMROOT=/tmp/build

# This allows overriding this on the command line.
VERSION=0.0.0

.PHONY: all install frameworks palettes utilities examples applciations documentation installdocs clean cleandocs

all:
	$(XCODEBUILD) -target "MusicKit (Aggregate)" -configuration Development build DSTROOT=$(DSTROOT) $(CONFIG)

install:
	$(XCODEBUILD) -target "MusicKit (Aggregate)" -configuration Deployment install DSTROOT=$(DSTROOT) OBJROOT=$(OBJROOT) SYMROOT=$(SYMROOT) VERSION=$(VERSION) $(CONFIG)

frameworks:
	$(XCODEBUILD) -target "Frameworks Only (Aggregate)" -configuration Deployment install DSTROOT=$(DSTROOT) OBJROOT=$(OBJROOT) SYMROOT=$(SYMROOT) VERSION=$(VERSION) $(CONFIG)

palettes:
	$(XCODEBUILD) -target "Palettes Only (Aggregate)" -configuration Deployment install DSTROOT=$(DSTROOT) $(CONFIG)

utilities:
	$(XCODEBUILD) -target "Utilities Only (Aggregate)" -configuration Deployment install DSTROOT=$(DSTROOT) $(CONFIG)

examples:
	$(XCODEBUILD) -target "Examples Only (Aggregate)" -configuration Deployment install DSTROOT=$(DSTROOT) $(CONFIG)

applications:
	$(XCODEBUILD) -target "Applications Only (Aggregate)" -configuration Deployment install DSTROOT=$(DSTROOT) $(CONFIG)

documentation:
	$(MAKE) -C Documentation DSTROOT=$(DSTROOT) VERSION=$(VERSION)

installdocs:
	$(MAKE) -C Documentation install DSTROOT=$(DSTROOT) VERSION=$(VERSION)

clean: cleandocs
	$(XCODEBUILD) -target "MusicKit (Aggregate)" clean DSTROOT=$(DSTROOT) $(CONFIG)

cleandocs:
	$(MAKE) -C Documentation clean DSTROOT=$(DSTROOT)
